import pandas as pd
import matplotlib.pyplot as plt


df = pd.read_csv("tweets.csv")

df['words'] = df['text'].str.split()

word_list = [word for words in df['words'] for word in words]
word_counts = pd.Series(word_list).value_counts()

plt.bar(word_counts[:20].index, word_counts[:20].values)
plt.xticks(rotation=90)
plt.xlabel('Word')
plt.ylabel('Frequency')
plt.title('Most frequently used words in tweets about climate change')
plt.show()

